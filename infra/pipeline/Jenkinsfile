pipeline {
    agent {
        docker {
            image 'alpine'
            args '-u root:root'
            label 'jarvis'
        }
    }
    stages {
        stage('Deps') {
            steps {
                sh 'apk add git go'
            }
        }
        stage('Build server') {
            steps {
                sh 'cd server && go build'
            }
        }
        stage('Test server') {
            steps {
                sh 'cd server && ./server &'
                sh 'sleep 3'
                sh 'cd server && go test'
                sh 'killall server'
            }
        }
    }
}
